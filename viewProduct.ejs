<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product Management</title>
    <link rel="stylesheet" href="/style3.css">
    <style>
        table {
            width: 80%;
            margin: 20px auto;
            border-collapse: collapse;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
        thead {
            background-color: #4CAF50;
            color: white;
        }
        th, td {
            text-align: left;
            padding: 10px;
            border: 1px solid #ddd;
        }
        tbody tr:nth-child(even) {
            background-color: #f9f9f9;
        }
        tbody tr:hover {
            background-color: #f1f1f1;
        }
        th {
            font-size: 16px;
        }
        td {
            font-size: 14px;
        }
        tbody td[colspan] {
            text-align: center;
            font-style: italic;
            color: #888;
        }
        /* Styling for delete button */
        .delete-btn {
            background-color: #ff4c4c;
            color: white;
            border: none;
            padding: 5px 10px;
            cursor: pointer;
            font-weight: bold;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }
        .delete-btn:hover {
            background-color: #ff0000;
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar">
        <div>
            <a href="/admin/home" class="website-name">My Website</a>
        </div>
        <ul class="nav-links">
            <li><a href="/product/add">Add Product</a></li>
            <li><a href="/product/viewProduct">View Product</a></li>
            <li><a href="/category/add">Add Category</a></li>
            <li><a href="/category/view">View Category</a></li>
        </ul>
    </nav>

    <!-- Table -->
    <table>
        <thead>
            <tr>
                <th>Product Name</th>
                <th>Category</th>
                <th>Price</th>
                <th>Actions</th> <!-- Add a column for actions -->
            </tr>
        </thead>
        <tbody>
            <% if (products && products.length > 0) { %>
                <% products.forEach((product) => { %>
                    <tr>
                        <!-- <td><%=product.id%></td> -->
                        <td><%= product.name %></td>
                        <td><%= product.category %></td>
                        <td><%= product.price %></td>
                        <td>
                            <!-- Delete Button -->
                            <form action="/product/delete/<%= product.id %>"style="display:inline;">
                                <button type="submit" class="delete-btn">Delete</button>
                            </form>
                        </td>
                    </tr>
                <% }); %>
            <% } else { %>
                <tr>
                    <td colspan="4">No products found.</td>
                </tr>
            <% } %>
        </tbody>
    </table>
</body>
</html>
